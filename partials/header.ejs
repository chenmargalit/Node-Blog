    <body>
        <div class="backgroundColor">
    <div class="container">
    <nav class="navbar navbar-dark bg-dark nav justify-content-end">
    <ul class="nav justify-content-end">
       <% if(currentUser){ %>
    <li class="nav-item">
      <a id="username" class="nav-link active" href="#">Logged in as - <%=currentUser.username %></a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="/logout">Log out</a>
            </li>
          
    <li class="nav-item">
        <a class="nav-link" href="/att">All attractions</a>
