<% include ../../partials/header.ejs %>
   <% if(currentUser && edit._id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
<div class="container">
<H1 class="register"> edit <%=edit.username%> profile </H1>


 <div class="container">

<form action="/users/<%=edit._id%>?_method=PUT" method="POST">
    
<div class="form-group">
    <label>adminCode</label>
    <input type="text" class="form-control" id="exampeInputEmail1" name="Edit[adminCode]" value="<%=edit.adminCode%>">
</div>
<div class="form-group">
    <label>first name</label>
        <input type="text" class="form-control" id="exampeInputEmail1" name="Edit[firstname]" value="<%=edit.firstname%>">
</div>
<div class="form-group">
    <label>last name</label>
       <input type="text" class="form-control" id="exampeInputEmail1" name="Edit[lastname]" value="<%=edit.lastname%>">
</div>
<div class="form-group">
    <label>image</label>
    <input type="text" class="form-control" id="exampeInputEmail1" name="Edit[avatar]" value="<%=edit.avatar%>">
</div>
<div class="form-group">
    <label>email</label>
    <input type="email" class="form-control" id="exampeInputEmail1" name="Edit[email]" value="<%=edit.email%>">
</div>
         <button class="btn btn-primary">Submit</button>
</div>
</form>
</div>

<% } else { %>
<p> you're not the profile owner</p>
<button><a href="back">Go back</a></button>
<% } %>

